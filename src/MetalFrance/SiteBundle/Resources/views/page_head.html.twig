{# main_site_title is a Twig global variable #}
{# title is supposed to be defined in sub-templates #}

{% if title is not defined and content is defined %}
    {% set title = ez_content_name( content ) %}
{% endif %}
<title>{{ title|default( '' ) ? title ~ ' - ' }}{{ main_site_title }}</title>

<meta name="MSSmartTagsPreventParsing" content="TRUE" />

<!--[if gte IE 8]>
<meta http-equiv="X-UA-Compatible" content="IE=8" />
<![endif]-->
<meta charset="utf-8" />

{# meta_tags is a Twig global variable #}
{% for tagName, tagValue in meta_tags %}
<meta name="{{ tagName }}" content="{{ tagValue }}" />
{% endfor %}

{# Facebook app ID, to define comments moderators #}
<meta property="fb:app_id" content="{{ facebook["app_id"] }}"/>
{# OpenGraph image #}
<meta name="og:image" content="{{ social_image|default( app.request.schemeAndHttpHost ~ asset( "bundles/metalfrancesite//images/image-listing_50x50.png" ) ) }}" />

