{% block meta %}
    {# main_site_title is a Twig global variable #}
    {# site_title is supposed to be defined in sub-templates #}
    <title>{% if site_title is defined %}{{ site_title }} - {% endif %}{{ main_site_title }}</title>
    <meta name="MSSmartTagsPreventParsing" content="TRUE" />

    <!--[if gte IE 8]>
    <meta http-equiv="X-UA-Compatible" content="IE=8" />
    <![endif]-->
    <meta charset="utf-8" />

    {# meta_tags is a Twig global variable #}
    {% for tagName, tagValue in meta_tags %}
    <meta name="{{ tagName }}" content="{{ tagValue }}" />
    {% endfor %}
{% endblock %}

